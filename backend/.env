# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration - MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017/ecommerce
# For MongoDB Atlas (cloud), use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Configuration - JWT secret key
JWT_SECRET=your_super_secret_key_change_this_to_something_random_and_secure
JWT_EXPIRE=7d
JWT_ACTIVATION_EXPIRE=24h
JWT_RESET_PASSWORD_EXPIRE=1h

# Email Configuration - Email service credentials
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_actual_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@ecommerce.com

# Frontend URL
FRONTEND_URL=http://localhost:5173
# For production, use your actual frontend domain: 
# FRONTEND_URL=https://yourdomain.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads